<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <!-- Internet permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/recipe"
        android:label="@string/app_name"
        android:roundIcon="@drawable/recipe"
        android:supportsRtl="true"
        android:theme="@style/Theme.Recipe"
        android:name="ke.nucho.recipe.RecipeApplication"
        tools:targetApi="31">

        <!-- AdMob App ID -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2431550807153061~1926093247"/>

        <!-- FIX: Resolve AdMob/Firebase conflict -->
        <property
            android:name="android.adservices.AD_SERVICES_CONFIG"
            android:resource="@xml/gma_ad_services_config"
            tools:replace="android:resource"/>

        <!-- ✅ NEW: Launcher Activity - Main Entry Point (First screen user sees) -->
        <activity
            android:name="ke.nucho.recipe.ui.activities.LauncherActivity"
            android:exported="true"
            android:theme="@style/Theme.Recipe">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ UPDATED: Welcome Activity - Now only for first-time users -->
        <activity
            android:name="ke.nucho.recipe.ui.activities.WelcomeActivity"
            android:exported="false"
            android:theme="@style/Theme.Recipe" />

        <!-- Get Started Activity -->
        <activity
            android:name="ke.nucho.recipe.ui.activities.GetStartedActivity"
            android:exported="false"
            android:theme="@style/Theme.Recipe" />

        <!-- Main Activity -->
        <activity
            android:name="ke.nucho.recipe.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Recipe"
            android:launchMode="singleTop" />

        <!-- Recipe Detail Activity -->
        <activity
            android:name="ke.nucho.recipe.ui.activities.RecipeDetailActivity"
            android:exported="false" />

        <!-- Favorite Activity -->
        <activity
            android:name="ke.nucho.recipe.ui.activities.FavoriteActivity"
            android:exported="false"
            android:theme="@style/Theme.Recipe" />

        <!-- WebView Activity for Privacy Policy and Terms -->
        <activity
            android:name="ke.nucho.recipe.ui.activities.WebViewActivity"
            android:exported="false"
            android:label="Legal"
            android:parentActivityName="ke.nucho.recipe.MainActivity"
            android:theme="@style/Theme.Recipe" />

    </application>

</manifest>