<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/recipe"
        android:label="@string/app_name"
        android:roundIcon="@drawable/recipe"
        android:supportsRtl="true"
        android:theme="@style/Theme.Recipe"
        android:name=".RecipeApplication"
        tools:targetApi="31">

        <!-- Welcome Activity - Launch Activity with Integrated Splash Screen -->
        <activity
            android:name=".ui.activities.WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.Recipe">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Get Started Activity -->
        <activity
            android:name=".ui.activities.GetStartedActivity"
            android:exported="false"
            android:theme="@style/Theme.Recipe" />

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Recipe" />

        <!-- Recipe Detail Activity -->
        <activity
            android:name=".ui.activities.RecipeDetailActivity"
            android:exported="false" />

        <!-- Favorite Activity -->
        <activity
            android:name=".ui.activities.FavoriteActivity"
            android:exported="false"
            android:theme="@style/Theme.Recipe" />

        <!-- WebView Activity for Privacy Policy and Terms -->
        <activity
            android:name=".ui.activities.WebViewActivity"
            android:exported="false"
            android:label="Legal"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Recipe" />

    </application>

</manifest>